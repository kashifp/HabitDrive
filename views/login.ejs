<%- include('header'); -%>

<body>

    <div class="heading">
        <h1 onclick="location.href='/'">HabitDrive</h1>
    </div>

    <div class="text-center">
        <form class="form-signin" method="post">
            <h1 class="h3 mb-3 font-weight-normal">Sign in</h1>
